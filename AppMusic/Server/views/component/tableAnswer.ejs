<div class="table-answers table-flex">
    <h1>Answers</h1>
    <table class="table table-dark" id="table-answerID">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Result</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>

<div class="modal fade" id="answerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title js-answer-id" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label  class="col-form-label">Name</label>
                        <textarea class="form-control js-answer-name" rows="5" id="comment"></textarea>
                        <label  class="col-form-label">Result</label></br>
                        <div class=" btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn btn-secondary btn-info active" id="js-answer-result-true">
                              <input type="radio" name="resultAnswer" id="js-answer-option-true" autocomplete="off" value= true> True
                            </label>
                            <label class="btn btn-secondary btn-danger" id="js-answer-result-false">
                              <input type="radio" name="resultAnswer" id="js-answer-option-false" autocomplete="off" value = false> False
                            </label>
                          </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="js-send-answer" data-dismiss="modal">Send</button>
            </div>
        </div>
    </div>
</div>