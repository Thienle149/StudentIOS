<div class="table-right table-flex">
    <h1>Questions</h1>
    <div class="content-table">
        <table class="table table-dark" id="table-questionID">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                <!-- Load Question -->
            </tbody>
        </table>
    </div>
</div>


<!-- Modals -->
<div class="modal fade" id="questionModal" tabindex="-1" role="dialog" aria-labelledby=""
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title js-question-id" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="col-form-label">Name</label>
                        <textarea class="form-control js-question-name" rows="5" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="js-send-question" data-dismiss="modal">Send</button>
            </div>
        </div>
    </div>
</div>